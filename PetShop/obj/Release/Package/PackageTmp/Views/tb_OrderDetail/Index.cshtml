@model IEnumerable<Badminton.Models.tb_OrderDetail>

@{
    ViewBag.Title = "Danh sách chi tiết đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h2>Danh sách chi tiết đơn hàng</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tb_Order.fullname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tb_Product.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.num)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tb_Order.fullname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tb_Product.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.num)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
